<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
	    <%= form_with url: send_mail_group_path(@group), method: :post, local: true do |f| %>
	    <div class="field row">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'col-xs-12 book_title' %>
  </div>

  <div class="field row">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'col-xs-12 book_body'%>
  </div>

  <div class="actions row">
    <%= f.submit class: 'btn btn-primary col-xs-12'%>
    <% end %>
	</div>
</div>