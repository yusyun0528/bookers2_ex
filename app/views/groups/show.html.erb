<div class="row">
    <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>
    <h2>New book</h2>
    <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-xs-9'>
        <h2>Group Detail</h2>
        <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                    <th></th>
                    <th>グループ名</th>
                    <th>紹介文</th>
                    <th>メンバー</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= attachment_image_tag(@group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                    <td>
                        <%= @group.name %>
                    </td>
                    <td>
                        <%= @group.introduction %>
                    </td>
                    <td>
                      <% @group.group_users.each do |group_user| %>
                      <%= group_user.user.name %> <br>
                      <% end %>
                    </td>
                    <td>
                    <% if @group.owner?(current_user) %>
                    
                        <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-success" %>
                        <%= link_to 'Notice an Event', mail_group_path(@group), class: "btn btn-success" %>
                    <% else %>
                      <% if not @group.member?(current_user) %>
                        <%= link_to 'Join this group', group_group_users_path(@group), method: :post, class: "btn btn-success" %>
                      <% else %>
                        <%= link_to 'Leave this group', group_group_users_path(@group), method: :delete, class: 'btn btn-danger' %>
                      <% end %>
                    <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>