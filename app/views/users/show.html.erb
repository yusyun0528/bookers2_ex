<div class='row'>
  
  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'info', user: @user,now: ''%>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>

  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <%= render 'books/index',books: @books %>
  
    
    <h2>7日間分の投稿数</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>6日前</th>
          <th>5日前</th>
          <th>4日前</th>
          <th>3日前</th>
          <th>2日前</th>
          <th>1日前</th>
          <th>今日</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @books_six_days_ago.count %></td>
          <td><%= @books_five_days_ago.count %></td>
          <td><%= @books_four_days_ago.count %></td>
          <td><%= @books_three_days_ago.count %></td>
          <td><%= @books_tow_days_ago.count %></td>
          <td><%= @yesterday_books.count %></td>
          <td><%= @today_books.count %></td>
        </tr>
      </tbody>
    </table>
    
    <canvas id="myChart"></canvas>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: ["6日前", "5日前", "4日前", "3日前", "2日前", "1日前", "今日"],
    datasets: [{
      label: '投稿した本の数',
      backgroundColor: "rgba(0,0,80,0.4)",
      borderColor: "rgba(0,0,80,1)",
      data: <%= @weekly_count %>
    }]
  }
});
</script>
<%= form_with url: search_books_path, method: :get, remote: true do |f| %>
<%= f.date_field :created_at %>
<%= f.hidden_field :user_id, value: @user.id %>
<%= f.submit '検索', class: 'btn btn-primary' %>

<% end %>
<div class="result"></div>
  </div>
</div>